<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05000C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="#0F1211"
        android:fontFamily="casual"
        android:gravity="bottom|center"
        android:text="Wellcome to Silicon Caculator"
        android:textColor="#6D8886"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:ems="10"
        android:gravity="bottom|center"
        android:hint="Enter  1st Number"
        android:inputType="numberDecimal"
        android:textColor="#5C6867"
        android:textColorHint="#506160" />

    <EditText
        android:id="@+id/input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:gravity="bottom|center"
        android:hint="Enter  2st Number"
        android:inputType="numberDecimal"
        android:textColor="#6F7E7C"
        android:textColorHint="#505E5D" />


    <Button
        android:id="@+id/times"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="255dp"
        android:layout_toStartOf="@+id/minus"
        android:layout_toLeftOf="@+id/minus"
        android:text="*"
        android:textSize="24sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="255dp"
        android:layout_toStartOf="@+id/times"
        android:layout_toLeftOf="@+id/times"
        android:text="+"
        android:textSize="24sp" />

    <Button
        android:id="@+id/plus2"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="255dp"
        android:layout_toStartOf="@+id/plus"
        android:layout_toLeftOf="@+id/plus"
        android:text="%"
        android:textSize="24sp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="255dp"
        android:layout_toStartOf="@+id/divide"
        android:layout_toLeftOf="@+id/divide"
        android:text="-"
        android:textSize="24sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="255dp"
        android:text="Clear"
        android:textSize="18sp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="255dp"
        android:layout_toStartOf="@+id/clear"
        android:layout_toLeftOf="@+id/clear"
        android:text="/"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_above="@+id/answer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="monospace"
        android:gravity="bottom|center"
        android:text="result"
        android:textColor="#737C7A"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="390dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:gravity="bottom|center"
        android:hint="0.00"
        android:textColor="#6E7776"
        android:textColorHint="#686E6D"
        android:textSize="30sp" />
</RelativeLayout>